# To find the Linux os and version, etc - 
cat /etc/os-release

# Create File in ubuntu
touch 'filename.extension'

# Search File globally
find / -name "filename"

# Enter Superuser 
sudo bash

# Running scripts using Superuser rights
bash filename.sh

# Check all open ports 
netstat -tulpn | grep LISTEN

# For running a python script in background ( server usage )
nohup python /location/file.py > /location/logs.out &


